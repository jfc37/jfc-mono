{
  "name": "ui-toolkit",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "libs/ui-toolkit/src",
  "prefix": "jfc",
  "tags": [],
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/angular:package",
      "outputs": ["{workspaceRoot}/dist/{projectRoot}"],
      "options": {
        "project": "libs/ui-toolkit/ng-package.json",
        "tailwindConfig": "libs/ui-toolkit/tailwind.config.js"
      },
      "configurations": {
        "production": {
          "tsConfig": "libs/ui-toolkit/tsconfig.lib.prod.json"
        },
        "development": {
          "tsConfig": "libs/ui-toolkit/tsconfig.lib.json"
        }
      },
      "defaultConfiguration": "production"
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ui-toolkit/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/ui-toolkit/**/*.ts",
          "libs/ui-toolkit/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/ui-toolkit/.storybook",
        "browserTarget": "ui-toolkit:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/ui-toolkit",
        "configDir": "libs/ui-toolkit/.storybook",
        "browserTarget": "ui-toolkit:build-storybook",
        "compodoc": false
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "test-storybook": {
      "executor": "nx:run-commands",
      "options": {
        "command": "test-storybook -c libs/ui-toolkit/.storybook --url=http://localhost:4400"
      }
    },
    "static-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "ui-toolkit:build-storybook",
        "staticFilePath": "dist/storybook/ui-toolkit"
      },
      "configurations": {
        "ci": {
          "buildTarget": "ui-toolkit:build-storybook:ci"
        }
      }
    }
  }
}
